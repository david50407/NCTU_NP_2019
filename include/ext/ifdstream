#if !defined(__EXT_IFDSTREAM__)
#define __EXT_IFDSTREAM__

#include <istream>

#include <ext/ifdbuf>

namespace ext {
	class ifdstream : public std::istream {
		public:
			ifdstream(int fd) : std::istream(0), __buffer(fd) {
				rdbuf(&__buffer);
			}
			const int getFd() { return __buffer.getFd(); }
		private:
			ifdbuf __buffer;
	};
}; // namespace ext

#endif // !defined(__EXT_IFDSTREAM__)